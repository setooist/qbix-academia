{
    "kind": "collectionType",
    "collectionName": "notification_logs",
    "info": {
        "singularName": "notification-log",
        "pluralName": "notification-logs",
        "displayName": "Notification Log",
        "description": "Debug log for email failures"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "notification_type": {
            "type": "enumeration",
            "enum": [
                "activity_assigned",
                "changes_requested",
                "activity_approved",
                "test_email"
            ],
            "required": true
        },
        "recipient_email": {
            "type": "email"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "pending",
                "success",
                "failed"
            ],
            "default": "pending"
        },
        "error_message": {
            "type": "text"
        },
        "error_code": {
            "type": "string"
        },
        "smtp_response": {
            "type": "json"
        },
        "success_message": {
            "type": "text"
        },
        "timestamp": {
            "type": "datetime"
        }
    }
}