{
    "kind": "collectionType",
    "collectionName": "assignments",
    "info": {
        "singularName": "assignment",
        "pluralName": "assignments",
        "displayName": "Assignment",
        "description": "Student assignments tracking progress on activities"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "activity": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::activity.activity",
            "inversedBy": "assignments"
        },
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        },
        "mentor": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "assigned",
                "in_progress",
                "submitted",
                "reviewed",
                "under_review",
                "approved",
                "changes_requested"
            ],
            "default": "assigned",
            "required": true
        },
        "grade": {
            "type": "float"
        },
        "submissionUploads": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "files",
                "images",
                "videos",
                "audios"
            ]
        },
        "feedback": {
            "type": "json"
        },
        "completedAt": {
            "type": "datetime"
        },
        "dueDate": {
            "type": "datetime"
        }
    }
}